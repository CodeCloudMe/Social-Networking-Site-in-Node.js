div(align="center")
  a(href='/userinfo') Home
  if(posts[0].user_id == currentUser.id)
    h1 Videos:
      a(href='/videos/new/') Upload New Videos
  ul
    -each post in posts
      if(post.user_id == currentUser.id)
        li.right
          h1=post.filename
          h3=post.created_at
          embed(src='/uploads/photos/'+post.filename, width=420, height=320, autoplay=0)
      else
        li.right
          h1=post.filename
          h3=post.created_at
          embed(src='/uploads/photos/'+post.filename, width=420, height=320, autoplay=0)
        div
          form( method="post", action="/share/video")
            input( type="hidden", name="_id", value=post._id.toHexString())
            div
              input( type="submit", name="Submit",value="Share This Video")
